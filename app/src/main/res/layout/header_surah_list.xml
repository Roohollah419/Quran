<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/headerLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:background="@color/primary"
    android:gravity="center_vertical"
    android:layoutDirection="ltr">

    <!-- Surah Name Header -->
    <TextView
        android:id="@+id/tvHeaderSurahName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:text="السورة"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:fontFamily="@font/uthmantaha"
        android:gravity="start"
        android:paddingEnd="8dp"
        android:paddingStart="8dp"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackground"/>

    <!-- Divider -->
    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:alpha="0.5"/>

    <!-- Surah Number Header -->
    <TextView
        android:id="@+id/tvHeaderSurahNumber"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.6"
        android:text="رقم"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:fontFamily="@font/uthmantaha"
        android:gravity="center"
        android:paddingEnd="8dp"
        android:paddingStart="8dp"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackground"/>

    <!-- Divider -->
    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:alpha="0.5"/>

    <!-- Ayah Count Header -->
    <TextView
        android:id="@+id/tvHeaderAyahCount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.8"
        android:text="أرقم الصفحة"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:fontFamily="@font/uthmantaha"
        android:gravity="center"
        android:paddingEnd="8dp"
        android:paddingStart="8dp"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackground"/>

    <!-- Divider -->
    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:alpha="0.5"/>

    <!-- Revelation Type Header -->
    <TextView
        android:id="@+id/tvHeaderRevelationType"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="نوع"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:fontFamily="@font/uthmantaha"
        android:gravity="center"
        android:paddingEnd="8dp"
        android:paddingStart="8dp"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackground"/>

</LinearLayout>
