<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/padding_large">

    <!-- Random Ayah in the center -->
    <TextView
        android:id="@+id/tvRandomAyahArabic"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:fontFamily="@font/uthmantaha"
        android:textDirection="rtl"
        android:gravity="center"
        android:lineSpacingExtra="12dp"
        android:textColor="@color/text_primary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tvAyahInfo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"/>

    <!-- Ayah Info (Surah name and Ayah number) -->
    <TextView
        android:id="@+id/tvAyahInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:gravity="center"
        android:textDirection="ltr"
        android:textColor="@color/text_secondary"
        android:layout_marginTop="@dimen/padding_medium"
        app:layout_constraintBottom_toTopOf="@id/btnSkip"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="@dimen/padding_large"/>

    <!-- Skip Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSkip"
        style="@style/AppButton.Outlined"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/skip"
        app:layout_constraintBottom_toTopOf="@id/btnFeelingLucky"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="@dimen/button_margin_horizontal"
        android:layout_marginEnd="@dimen/button_margin_horizontal"/>

    <!-- I'm Feeling Lucky Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnFeelingLucky"
        style="@style/AppButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/feeling_lucky"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="48dp"
        android:layout_marginStart="@dimen/button_margin_horizontal"
        android:layout_marginEnd="@dimen/button_margin_horizontal"/>

</androidx.constraintlayout.widget.ConstraintLayout>
