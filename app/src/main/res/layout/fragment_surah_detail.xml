<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Surah Header (matches Surah List item style) -->
    <FrameLayout
        android:id="@+id/frameLayoutSurahHeader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Background frame image -->
        <ImageView
            android:id="@+id/ivSurahFrame"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:src="@drawable/luxury_frame"
            android:scaleType="fitXY"
            android:contentDescription="@string/app_name"/>

        <!-- Content layout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:padding="12dp"
            android:gravity="center_vertical"
            android:layoutDirection="rtl">

            <!-- Surah Name -->
            <TextView
                android:id="@+id/tvSurahName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="@string/app_name"
                android:textSize="18sp"
                android:textColor="?android:attr/textColorPrimary"
                android:fontFamily="@font/uthmantaha"
                android:textDirection="rtl"
                android:gravity="center"
                android:paddingEnd="8dp"
                android:paddingStart="8dp"/>

            <!-- Divider -->
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="?android:attr/textColorSecondary"
                android:alpha="0.3"/>

            <!-- Surah Number -->
            <TextView
                android:id="@+id/tvSurahNumber"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:textSize="16sp"
                android:textColor="?android:attr/textColorPrimary"
                android:textDirection="ltr"
                android:gravity="center"
                android:paddingEnd="8dp"
                android:paddingStart="8dp"/>

            <!-- Divider -->
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="?android:attr/textColorSecondary"
                android:alpha="0.3"/>

            <!-- Ayah Count -->
            <TextView
                android:id="@+id/tvSurahInfo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:textSize="16sp"
                android:textColor="?android:attr/textColorPrimary"
                android:textDirection="ltr"
                android:gravity="center"
                android:paddingEnd="8dp"
                android:paddingStart="8dp"/>

            <!-- Divider -->
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="?android:attr/textColorSecondary"
                android:alpha="0.3"/>

            <!-- Revelation Type -->
            <ImageView
                android:id="@+id/ivRevelationType"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:scaleType="centerInside"
                android:paddingEnd="8dp"
                android:paddingStart="8dp"
                android:contentDescription="@string/app_name"/>

        </LinearLayout>
    </FrameLayout>

    <!-- RecyclerView for Ayahs -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewAyahs"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="@dimen/padding_small"
        android:paddingBottom="80dp"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@id/frameLayoutSurahHeader"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
