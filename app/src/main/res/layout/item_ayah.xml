<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="0dp"
    android:layout_marginEnd="0dp"
    android:layout_marginTop="0dp"
    android:layout_marginBottom="0dp"
    app:cardCornerRadius="0dp"
    app:cardElevation="0dp"
    app:cardBackgroundColor="@android:color/transparent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:background="@android:color/transparent">

        <TextView
            android:id="@+id/tvBismillah"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="بِسۡمِ ٱللَّهِ ٱلرَّحۡمَـٰنِ ٱلرَّحِیمِ"
            android:textSize="24sp"
            android:gravity="center"
            android:layoutDirection="rtl"
            android:fontFamily="@font/uthmantaha"
            android:textDirection="rtl"
            android:visibility="gone"
            android:layout_marginBottom="24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tvAyahArabic"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Arabic Text"
            android:textSize="20sp"
            android:gravity="start"
            android:layoutDirection="rtl"
            android:fontFamily="@font/uthmantaha"
            android:textDirection="rtl"
            android:lineSpacingExtra="2dp"
            app:layout_constraintTop_toBottomOf="@id/tvBismillah"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tvAyahTranslation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Translation Text"
            android:textSize="16sp"
            android:gravity="start"
            android:textDirection="ltr"
            android:lineSpacingExtra="0dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/tvAyahArabic"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tvAyahNumber"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="1"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="?android:attr/textColorPrimary"
            android:gravity="center"
            android:paddingTop="3dp"
            android:includeFontPadding="false"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="12dp"
            app:layout_constraintTop_toBottomOf="@id/tvAyahTranslation"
            app:layout_constraintBottom_toTopOf="@id/bottomBorder"
            app:layout_constraintStart_toStartOf="parent"/>

        <View
            android:id="@+id/bottomBorder"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="?android:attr/textColorSecondary"
            android:alpha="0.2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
