<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:clickable="true"
    android:focusable="true"
    android:background="?attr/selectableItemBackground">

    <!-- Background frame image -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:src="@drawable/luxury_frame"
        android:scaleType="fitXY"
        android:contentDescription="@string/app_name"/>

    <!-- Content layout -->
    <LinearLayout
        android:id="@+id/layoutSurahItem"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical"
        android:layoutDirection="rtl">

    <!-- Surah Name -->
    <TextView
        android:id="@+id/tvSurahName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:text="الفاتحة"
        android:textSize="18sp"
        android:textColor="#000000"
        android:fontFamily="@font/uthmantaha"
        android:textDirection="rtl"
        android:gravity="center"
        android:paddingEnd="8dp"
        android:paddingStart="8dp"/>

    <!-- Divider -->
    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/divider"/>

    <!-- Surah Number -->
    <TextView
        android:id="@+id/tvSurahNumber"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.6"
        android:text="1"
        android:textSize="16sp"
        android:textColor="#000000"
        android:textDirection="ltr"
        android:gravity="center"
        android:paddingEnd="8dp"
        android:paddingStart="8dp"/>

    <!-- Divider -->
    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/divider"/>

    <!-- Ayah Count -->
    <TextView
        android:id="@+id/tvAyahCount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.8"
        android:text="7"
        android:textSize="16sp"
        android:textColor="#000000"
        android:textDirection="ltr"
        android:gravity="center"
        android:paddingEnd="8dp"
        android:paddingStart="8dp"/>

    <!-- Divider -->
    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/divider"/>

    <!-- Revelation Type -->
    <ImageView
        android:id="@+id/ivRevelationType"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:scaleType="centerInside"
        android:paddingEnd="8dp"
        android:paddingStart="8dp"
        android:contentDescription="@string/app_name"/>

    </LinearLayout>
</FrameLayout>
