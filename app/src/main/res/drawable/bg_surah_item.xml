<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Deep shadow for luxury depth -->
    <item
        android:left="6dp"
        android:right="6dp"
        android:top="2dp"
        android:bottom="10dp">
        <shape android:shape="rectangle">
            <corners android:radius="12dp"/>
            <solid android:color="#50000000"/>
        </shape>
    </item>

    <!-- Mid shadow -->
    <item
        android:left="5dp"
        android:right="5dp"
        android:top="1dp"
        android:bottom="8dp">
        <shape android:shape="rectangle">
            <corners android:radius="12dp"/>
            <solid android:color="#30000000"/>
        </shape>
    </item>

    <!-- Gradient background base -->
    <item
        android:left="5dp"
        android:right="5dp"
        android:top="1dp"
        android:bottom="6dp">
        <shape android:shape="rectangle">
            <corners android:radius="12dp"/>
            <gradient
                android:type="linear"
                android:angle="135"
                android:startColor="#FFFFFF"
                android:centerColor="#F8F8F8"
                android:endColor="#F0F0F0"/>
        </shape>
    </item>

    <!-- Outer luxury border - gold -->
    <item
        android:left="5dp"
        android:right="5dp"
        android:top="1dp"
        android:bottom="6dp">
        <shape android:shape="rectangle">
            <corners android:radius="12dp"/>
            <stroke
                android:width="3dp"
                android:color="@color/accent"/>
        </shape>
    </item>

    <!-- Inner border - green -->
    <item
        android:left="8dp"
        android:right="8dp"
        android:top="4dp"
        android:bottom="9dp">
        <shape android:shape="rectangle">
            <corners android:radius="10dp"/>
            <stroke
                android:width="1dp"
                android:color="@color/primary"/>
        </shape>
    </item>

    <!-- Top left corner decoration -->
    <item
        android:left="3dp"
        android:top="-1dp"
        android:width="12dp"
        android:height="12dp"
        android:gravity="left|top">
        <rotate
            android:fromDegrees="45"
            android:pivotX="50%"
            android:pivotY="50%">
            <shape android:shape="rectangle">
                <solid android:color="@color/accent"/>
            </shape>
        </rotate>
    </item>

    <!-- Top right corner decoration -->
    <item
        android:right="3dp"
        android:top="-1dp"
        android:width="12dp"
        android:height="12dp"
        android:gravity="right|top">
        <rotate
            android:fromDegrees="45"
            android:pivotX="50%"
            android:pivotY="50%">
            <shape android:shape="rectangle">
                <solid android:color="@color/accent"/>
            </shape>
        </rotate>
    </item>

    <!-- Bottom left corner decoration -->
    <item
        android:left="3dp"
        android:bottom="4dp"
        android:width="12dp"
        android:height="12dp"
        android:gravity="left|bottom">
        <rotate
            android:fromDegrees="45"
            android:pivotX="50%"
            android:pivotY="50%">
            <shape android:shape="rectangle">
                <solid android:color="@color/accent"/>
            </shape>
        </rotate>
    </item>

    <!-- Bottom right corner decoration -->
    <item
        android:right="3dp"
        android:bottom="4dp"
        android:width="12dp"
        android:height="12dp"
        android:gravity="right|bottom">
        <rotate
            android:fromDegrees="45"
            android:pivotX="50%"
            android:pivotY="50%">
            <shape android:shape="rectangle">
                <solid android:color="@color/accent"/>
            </shape>
        </rotate>
    </item>

    <!-- Center dots on corners -->
    <item
        android:left="7dp"
        android:top="3dp"
        android:width="4dp"
        android:height="4dp"
        android:gravity="left|top">
        <shape android:shape="oval">
            <solid android:color="@color/primary"/>
        </shape>
    </item>

    <item
        android:right="7dp"
        android:top="3dp"
        android:width="4dp"
        android:height="4dp"
        android:gravity="right|top">
        <shape android:shape="oval">
            <solid android:color="@color/primary"/>
        </shape>
    </item>

    <item
        android:left="7dp"
        android:bottom="8dp"
        android:width="4dp"
        android:height="4dp"
        android:gravity="left|bottom">
        <shape android:shape="oval">
            <solid android:color="@color/primary"/>
        </shape>
    </item>

    <item
        android:right="7dp"
        android:bottom="8dp"
        android:width="4dp"
        android:height="4dp"
        android:gravity="right|bottom">
        <shape android:shape="oval">
            <solid android:color="@color/primary"/>
        </shape>
    </item>
</layer-list>
