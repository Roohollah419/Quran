<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow -->
    <item
        android:left="4dp"
        android:right="4dp"
        android:top="2dp"
        android:bottom="6dp">
        <shape android:shape="rectangle">
            <corners android:radius="4dp"/>
            <solid android:color="#40000000"/>
        </shape>
    </item>

    <!-- Outer border - gold/primary -->
    <item
        android:left="4dp"
        android:right="4dp"
        android:top="2dp"
        android:bottom="4dp">
        <shape android:shape="rectangle">
            <corners android:radius="4dp"/>
            <solid android:color="@color/primary"/>
        </shape>
    </item>

    <!-- Inner background - white/cream -->
    <item
        android:left="7dp"
        android:right="7dp"
        android:top="5dp"
        android:bottom="7dp">
        <shape android:shape="rectangle">
            <corners android:radius="2dp"/>
            <solid android:color="#F5F5DC"/>
        </shape>
    </item>

    <!-- Top left corner ornament -->
    <item
        android:left="2dp"
        android:top="0dp"
        android:width="10dp"
        android:height="10dp"
        android:gravity="left|top">
        <rotate
            android:fromDegrees="45"
            android:pivotX="50%"
            android:pivotY="50%">
            <shape android:shape="rectangle">
                <solid android:color="@color/primary"/>
            </shape>
        </rotate>
    </item>

    <!-- Top right corner ornament -->
    <item
        android:right="2dp"
        android:top="0dp"
        android:width="10dp"
        android:height="10dp"
        android:gravity="right|top">
        <rotate
            android:fromDegrees="45"
            android:pivotX="50%"
            android:pivotY="50%">
            <shape android:shape="rectangle">
                <solid android:color="@color/primary"/>
            </shape>
        </rotate>
    </item>

    <!-- Bottom left corner ornament -->
    <item
        android:left="2dp"
        android:bottom="2dp"
        android:width="10dp"
        android:height="10dp"
        android:gravity="left|bottom">
        <rotate
            android:fromDegrees="45"
            android:pivotX="50%"
            android:pivotY="50%">
            <shape android:shape="rectangle">
                <solid android:color="@color/primary"/>
            </shape>
        </rotate>
    </item>

    <!-- Bottom right corner ornament -->
    <item
        android:right="2dp"
        android:bottom="2dp"
        android:width="10dp"
        android:height="10dp"
        android:gravity="right|bottom">
        <rotate
            android:fromDegrees="45"
            android:pivotX="50%"
            android:pivotY="50%">
            <shape android:shape="rectangle">
                <solid android:color="@color/primary"/>
            </shape>
        </rotate>
    </item>

    <!-- Center decorative dots on corners -->
    <item
        android:left="6dp"
        android:top="4dp"
        android:width="4dp"
        android:height="4dp"
        android:gravity="left|top">
        <shape android:shape="oval">
            <solid android:color="#F5F5DC"/>
        </shape>
    </item>

    <item
        android:right="6dp"
        android:top="4dp"
        android:width="4dp"
        android:height="4dp"
        android:gravity="right|top">
        <shape android:shape="oval">
            <solid android:color="#F5F5DC"/>
        </shape>
    </item>

    <item
        android:left="6dp"
        android:bottom="6dp"
        android:width="4dp"
        android:height="4dp"
        android:gravity="left|bottom">
        <shape android:shape="oval">
            <solid android:color="#F5F5DC"/>
        </shape>
    </item>

    <item
        android:right="6dp"
        android:bottom="6dp"
        android:width="4dp"
        android:height="4dp"
        android:gravity="right|bottom">
        <shape android:shape="oval">
            <solid android:color="#F5F5DC"/>
        </shape>
    </item>
</layer-list>
